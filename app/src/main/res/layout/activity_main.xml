<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/search_edit_frame">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="25dp"
        tools:context="com.example.ankit.search.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:text="Search"
            android:textColor="@android:color/black"
            android:textSize="32sp" />

        <SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/background_searchview"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:text="Search students, courses, places, clubs and much more."
            android:textSize="15sp"
            android:textStyle="italic" />

    </LinearLayout>


    <TextView
        android:id="@+id/add_org"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="To add your organisation to insti database click here."
        android:textSize="20sp"
        android:textColor="@android:color/background_dark"
        android:background="@android:color/holo_green_dark"/>
</RelativeLayout>